SRCTOP  = @top_srcdir@
SRCDIR  = @srcdir@
OBJTOP  = ..

TCL_LIB_DIR   = @TCL_LIB_DIR@
TCL_LIB_FLAG  = @TCL_LIB_FLAG@
TK_LIB_DIR    = @TK_LIB_DIR@

TK_LIB_FLAG   = @TK_LIB_FLAG@
ITCL_LIB_DIR  = @ITCL_LIB_DIR@
ITCL_LIB_FLAG = @ITCL_LIB_FLAG@

LDRUN_PREFIX  = @LDRUN_PREFIX@

OBJTOP_ABS    = $(shell cd $(OBJTOP) ; pwd)
SRCTOP_ABS    = $(shell cd $(SRCTOP) ; pwd)

SRCS      = main.cc
CFLAGS   := $(CFLAGS) -DPSECORETCL=\"$(SRCTOP_ABS)/libs/PSECore/TCL\" \
                      -DSCICORETCL=\"$(SRCTOP_ABS)/libs/SCICore/TCL\" \
                      -DDEFAULT_PACKAGE_PATH=\"$(OBJTOP_ABS)/packages/PSECommon/libPSECommon.so\($(SRCTOP_ABS)/packages/PSECommon/TCL\):$(OBJTOP_ABS)/packages/Uintah/libUintah.so\($(SRCTOP_ABS)/packages/Uintah/TCL\)\"
INCLUDES  = -I$(OBJTOP) -I$(SRCTOP)/libs \
            -I$(SRCTOP)/libs/SCICore -I$(SRCTOP)/libs/PSECore
            
PROGRAM   = uintah
LIBRARIES = $(LDRUN_PREFIX)$(TCL_LIB_DIR) \
            $(LDRUN_PREFIX)$(TK_LIB_DIR) \
            $(LDRUN_PREFIX)$(ITCL_LIB_DIR) \
            $(LDRUN_PREFIX)$(OBJTOP_ABS)/libs/PSECore \
            $(LDRUN_PREFIX)$(OBJTOP_ABS)/libs/SCICore \
            $(LDRUN_PREFIX)$(OBJTOP_ABS)/libs/3rdParty \
            -L$(OBJTOP)/libs/PSECore -lPSECore \
            -L$(OBJTOP)/libs/SCICore -lSCICore \
            -L$(OBJTOP)/libs/ThirdParty \
            -L$(ITCL_LIB_DIR) $(ITCL_LIB_FLAG) \
            -L$(TK_LIB_DIR) $(TK_LIB_FLAG) \
            -L$(TCL_LIB_DIR) $(TCL_LIB_FLAG) \
            -L/usr/lib32 -lGL \
            -L/usr/X11R6/lib -lXext -lX11 \
            -lm

include $(SRCTOP)/scripts/program.mk

../uintah:: uintah
	cp uintah ..

all:: ../uintah

_distcleanHere::
	rm -f ../uintah
