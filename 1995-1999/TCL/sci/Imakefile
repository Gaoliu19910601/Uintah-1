
#include <config/sci.cf>

#ifdef SCI_OPENGL
OPENGL_OBJS = tkOpenGL.o
OPENGL_SRCS = tkOpenGL.c

#ifdef SCI_MESA
OPENGL_INCLUDES = -I$(TOP)/Mesa/include
OPENGL_LIBS = -L$(TOP)/Mesa/lib -lMesaGL
#else
OPENGL_INCLUDES = 
OPENGL_LIBS = -lGL
#endif
#else
OPENGL_OBJS =
OPENGL_SRCS =
#endif

#if defined(SCI_MACHINE_Solaris)
XLIBDIR = -L/usr/openwin/lib
XINCLUDE = -I/usr/openwin/include
#endif

#if defined(SCI_MACHINE_Linux)
XLIBDIR = -L/usr/X11R6/lib
#endif

OBJS = tk3d2.o  tkAppInit.o  tkBevel.o  tkCanvBLine.o  tkRange.o \
	$(OPENGL_OBJS)
SRCS = tk3d2.c  tkAppInit.c  tkBevel.c  tkCanvBLine.c  tkRange.c \
	$(OPENGL_SRCS)
#if defined(SCI_MACHINE_SGO) && defined(SCI_IRIX_BIN_o32)
LOCALCFLAGS = -woff 835
#endif
#if defined(SCI_MACHINE_SGI) && defined(SCI_IRIX_BIN_n32_mips3) || defined(SCI_IRIX_BIN_n32_mips4) \
	|| defined(SCI_IRIX_BIN_64_mips3) || defined(SCI_IRIX_BIN_64_mips4)
LOCALCFLAGS = -woff 1233,1692,1498,1174
#endif
LOCALINCLUDES = -I../tcl -I../tk -I../itcl/src $(OPENGL_INCLUDES) $(XINCLUDE)

SCI_CLIBS= -lc
SO_LIBS =
SO_LDFLAGS = -L$(SCILIBDIR) $(XLIBDIR) -lBLT -ltkTable TK_LIB ITCL_LIB TCL_LIB $(OPENGL_LIBS) -lX11 -lm

LIBNAME = scitk

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS),$(SO_LIBS), $(SO_LDFLAGS))
