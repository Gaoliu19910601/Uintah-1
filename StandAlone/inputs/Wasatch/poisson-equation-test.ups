<Uintah_specification>

  <Meta>
    <title>Test Boundary Conditions</title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre" />

  <Wasatch>

    <Density>
      <IsConstant>true</IsConstant>
    </Density>
    
     <PoissonEquation>
         <SolutionVariable>wall_distance</SolutionVariable>
      <PoissonRHS>
      <NameTag name="poisson-rhs-1" state="STATE_NONE" />
      </PoissonRHS>
      <Parameters>
        <!-- Hypre options -->
        <solver>         cg      </solver>
        <preconditioner> pfmg    </preconditioner>
        <tolerance>      1e-10  </tolerance>
        <maxiterations>  200    </maxiterations>
        <relax_type>     2       </relax_type>
      </Parameters>
      <ReferenceValue value="0.0">
        <ReferenceCell>[0,0,0]</ReferenceCell>
      </ReferenceValue>
      <Use3DLaplacian>true</Use3DLaplacian>      
     </PoissonEquation>

     <PoissonEquation>
         <SolutionVariable>potential_flow</SolutionVariable>
      <PoissonRHS>
      <NameTag name="poisson-rhs" state="STATE_NONE" />
      </PoissonRHS>
      <ReferenceValue value="0.0">
        <ReferenceCell>[0,0,0]</ReferenceCell>
      </ReferenceValue>
      <Use3DLaplacian>true</Use3DLaplacian>      
      <Parameters>
        <!-- Hypre options -->
        <solver>         cg      </solver>
        <preconditioner> pfmg    </preconditioner>
        <tolerance>      1e-6  </tolerance>
        <maxiterations>  200    </maxiterations>
        <relax_type>     2       </relax_type>
       </Parameters>
     </PoissonEquation>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="poisson-rhs" state="STATE_NONE" />
      <Constant>0.0</Constant>
    </BasicExpression>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="poisson-rhs" state="STATE_NONE" />
      <Constant>0.0</Constant>
    </BasicExpression>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="poisson-rhs-1" state="STATE_NONE" />
      <Constant>-1.0</Constant>
    </BasicExpression>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="poisson-rhs-1" state="STATE_NONE" />
      <Constant>-1.0</Constant>
    </BasicExpression>

  </Wasatch>


  <Time>
    <maxTime>0.0003</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.00001</delt_min>
    <delt_max>0.00001</delt_max>
    <max_Timesteps> 3 </max_Timesteps>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>poisson-test.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.00001"/>
    <compression>gzip</compression>
    <save label="wall_distance"/>    
    <save label="potential_flow"/>        
  </DataArchiver> 

  <Grid>
      <BoundaryConditions>
      
      <!-- BOUNDARY CONDITIONS FOR NON-STAGGERED SCALAR -->
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="wall_distance">
          <value> 0.0 </value>
        </BCType>   
        <BCType id="all" var="Neumann" label="potential_flow">
          <value> 1.0 </value>
        </BCType>                     
      </Face>
      
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="wall_distance">
          <value> 0.0 </value>
        </BCType>                
        <BCType id="all" var="Neumann" label="potential_flow">
          <value> 0.0 </value>
        </BCType>                
      </Face>
      
      <Face side="y-">
        <BCType id="all" var="Neumann" label="wall_distance">
          <value> 0.0 </value>
        </BCType>
        <BCType id="all" var="Neumann" label="potential_flow">
          <value> 1.0 </value>
        </BCType>                
      </Face>
      
      <Face side="y+">
        <BCType id="all" var="Dirichlet" label="wall_distance">
          <value> 0.0 </value>
        </BCType>
        <BCType id="all" var="Neumann" label="potential_flow">
          <value> -1.0 </value>
        </BCType>                
      </Face>
      
      <Face side="z-">
        <BCType id="all" var="Dirichlet" label="wall_distance">
          <value> 0.0 </value>
        </BCType>
        <BCType id="all" var="Dirichlet" label="potential_flow">
          <value> 0.0 </value>
        </BCType>                
      </Face>
      
      <Face side="z+">
        <BCType id="all" var="Dirichlet" label="wall_distance">
          <value> 0.0 </value>
        </BCType>
        <BCType id="all" var="Dirichlet" label="potential_flow">
          <value> 0.0 </value>
        </BCType>                
      </Face>      
    </BoundaryConditions>

    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1,1,1]</upper>
        <resolution>[60,60,60]</resolution>
        <patches>[3,3,3]</patches>
      </Box>
      <periodic>[0,0,0]</periodic>
    </Level>
  </Grid>

</Uintah_specification>
