<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE Uintah_specification SYSTEM "input.dtd"> -->
<!-- @version: Updated 7/31/00 -->
<Uintah_specification>
  <Meta>
    <title>Heat conduction problem</title>
  </Meta>
  <SimulationComponent type="mpm"/>
  <Time>
    <maxTime>.6</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.0001</delt_min>
    <delt_max>0.01</delt_max>
    <timestep_multiplier>0.6</timestep_multiplier>
  </Time>
  <DataArchiver>
    <filebase>test_heatcond.uda</filebase>
    <outputTimestepInterval>25</outputTimestepInterval>
    <save label="KineticEnergy"/>
    <save label="TotalMass"/>
    <save label="StrainEnergy"/>
    <save label="CenterOfMassPosition"/>
    <save label="TotalMomentum"/>
    <save label="p.particleID"/>
    <save label="p.x"/>
    <save label="p.volume"/>
    <save label="p.stress"/>
    <save label="p.temperature"/>
    <save label="g.mass"/>
    <save label="g.stressFS"/>
    <checkpoint cycle="2" interval="0.01"/>
  </DataArchiver>
  <!--The node MPM has been removed.  Its original values are
    in input.xml.orig, and values used for restarts are in checkpoints/t*****/timestep.xml-->
  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
  </PhysicalConstants>
  <!--The node MaterialProperties has been removed.  Its original values are
    in input.xml.orig, and values used for restarts are in checkpoints/t*****/timestep.xml-->
  <Grid>
    <BoundaryConditions>
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="Temperature">
          <value> 300. </value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType id="all" var="Neumann" label="Temperature">
          <value> 0. </value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType id="all" var="Neumann" label="Temperature">
          <value> 0. </value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType id="all" var="Neumann" label="Temperature">
          <value> 0. </value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType id="all" var="Neumann" label="Temperature">
          <value> 0. </value>
        </BCType>
      </Face>
      <Face side="z+">
        <BCType id="all" var="Neumann" label="Temperature">
          <value> 0. </value>
        </BCType>
      </Face>
    </BoundaryConditions>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[0.02,0.004,0.004]</upper>
        <resolution>[20,4,4]</resolution>
        <patches>[1,1,1]</patches>
        <extraCells>[1,1,1]</extraCells>
      </Box>
    </Level>
  </Grid>
</Uintah_specification>
