	sed 's/<TYPE>/<double>/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc |  sed 's/TYPE//g' > $(SRCDIR)/ScalarFieldRG.cc 

$(SRCDIR)/ScalarFieldRGchar.cc: $(SRCDIR)/ScalarFieldRGTYPE.cc $(SRCDIR)/ScalarFieldRGchar.h
	sed 's/TYPE/char/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc > $(SRCDIR)/ScalarFieldRGchar.cc 

$(SRCDIR)/ScalarFieldRGuchar.cc: $(SRCDIR)/ScalarFieldRGTYPE.cc $(SRCDIR)/ScalarFieldRGuchar.h
	sed 's/TYPE/uchar/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc >$(SRCDIR)/ScalarFieldRGuchar.cc 

$(SRCDIR)/ScalarFieldRGshort.cc: $(SRCDIR)/ScalarFieldRGTYPE.cc $(SRCDIR)/ScalarFieldRGshort.h
	sed 's/TYPE/short/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc > $(SRCDIR)/ScalarFieldRGshort.cc 

$(SRCDIR)/ScalarFieldRGint.cc: $(SRCDIR)/ScalarFieldRGTYPE.cc $(SRCDIR)/ScalarFieldRGint.h
	sed 's/TYPE/int/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc > $(SRCDIR)/ScalarFieldRGint.cc 

$(SRCDIR)/ScalarFieldRGfloat.cc: $(SRCDIR)/ScalarFieldRGTYPE.cc $(SRCDIR)/ScalarFieldRGfloat.h
	sed 's/TYPE/float/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc >$(SRCDIR)/ScalarFieldRGfloat.cc 

$(SRCDIR)/ScalarFieldRGdouble.cc: $(SRCDIR)/ScalarFieldRGTYPE.cc $(SRCDIR)/ScalarFieldRGdouble.h
	sed 's/TYPE/double/g' < $(SRCDIR)/ScalarFieldRGTYPE.cc > $(SRCDIR)/ScalarFieldRGdouble.cc 

$(SRCDIR)/ScalarFieldRG.h: $(SRCDIR)/ScalarFieldRGdouble.h

