SRCTOP   = @top_srcdir@
SRCDIR   = @srcdir@
OBJTOP   = ../..

GENSRCS = ScalarFieldRG.cc  ScalarFieldRGchar.cc ScalarFieldRGuchar.cc \
	  ScalarFieldRGshort.cc ScalarFieldRGint.cc \
	  ScalarFieldRGfloat.cc  ScalarFieldRGdouble.cc

SRCS     = $(GENSRCS) TriSurface.cc BasicSurfaces.cc Boolean.cc \
           ColorMap.cc ColumnMatrix.cc Datatype.cc DenseMatrix.cc HexMesh.cc \
           Image.cc Interval.cc Matrix.cc Mesh.cc ScalarField.cc \
           ScalarFieldHUG.cc  ScalarFieldRGBase.cc \
           ScalarFieldUG.cc ScalarFieldZone.cc SparseRowMatrix.cc Surface.cc \
           SymSparseRowMatrix.cc TriDiagonalMatrix.cc VectorField.cc \
           VectorFieldHUG.cc VectorFieldOcean.cc VectorFieldRG.cc \
           VectorFieldUG.cc VectorFieldZone.cc VoidStar.cc cDMatrix.cc \
           cMatrix.cc cSMatrix.cc cVector.cc SurfTree.cc \
	   ScalarFieldRGCC.cc VectorFieldRGCC.cc

INCLUDES = -I$(SRCTOP) -I$(OBJTOP)

include $(SRCTOP)/scripts/objs.mk

$(SRCDIR)/ScalarFieldRG.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/<TYPE>/<double>/g' < $(SRCDIR)/ScalarFieldRGTYPE.h | sed 's/TYPE//g' > $(SRCDIR)/ScalarFieldRG.h

$(SRCDIR)/ScalarFieldRGchar.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/TYPE/char/g' < $(SRCDIR)/ScalarFieldRGTYPE.h > $(SRCDIR)/ScalarFieldRGchar.h

$(SRCDIR)/ScalarFieldRGuchar.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/TYPE/uchar/g' < $(SRCDIR)/ScalarFieldRGTYPE.h > $(SRCDIR)/ScalarFieldRGuchar.h

$(SRCDIR)/ScalarFieldRGshort.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/TYPE/short/g' < $(SRCDIR)/ScalarFieldRGTYPE.h > $(SRCDIR)/ScalarFieldRGshort.h


$(SRCDIR)/ScalarFieldRGint.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/TYPE/int/g' < $(SRCDIR)/ScalarFieldRGTYPE.h > $(SRCDIR)/ScalarFieldRGint.h

$(SRCDIR)/ScalarFieldRGfloat.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/TYPE/float/g' < $(SRCDIR)/ScalarFieldRGTYPE.h > $(SRCDIR)/ScalarFieldRGfloat.h

$(SRCDIR)/ScalarFieldRGdouble.h: $(SRCDIR)/ScalarFieldRGTYPE.h
	sed 's/TYPE/double/g' < $(SRCDIR)/ScalarFieldRGTYPE.h > $(SRCDIR)/ScalarFieldRGdouble.h


# .CC

