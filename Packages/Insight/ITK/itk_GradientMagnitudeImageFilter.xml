<?xml version="1.0"?>
<!DOCTYPE filter-itk SYSTEM "itk_filter.dtd">
<filter-itk name="itk::GradientMagnitudeImageFilter">
  <description>
Computes the gradient magnitude of an image region at each pixel.
  </description>
  <templated>
    <base>itk::Object</base>
    <template>InputImageType</template>
    <template>OutputImageType</template>
    <defaults>
      <default>itk::Image&lt;unsigned char, 2&gt;</default>
      <default>itk::Image&lt;float, 2&gt;</default>
    </defaults>
  </templated>

  <inputs>
    <input num="1">
      <value>InputImageType</value>
      <call>SetInput</call>
      <name>InputImage</name>
    </input>  
  </inputs>
  <outputs>
    <output num="1">
      <value>OutputImageType</value>
      <call>GetOutput</call>
      <name>OutputImage</name>
    </output>
  </outputs>

  <parameters>
  </parameters>

  <includes>
    <file>itkGradientMagnitudeImageFilter.h</file>
  </includes>
</filter-itk>

