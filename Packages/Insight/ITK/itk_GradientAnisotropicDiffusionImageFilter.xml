<filter-itk name="itk::GradientAnisotropicDiffusionImageFilter">
  <description>
  This filter performs anisotropic diffusion on a scalar itk::Image using the classic Perona-Malik, gradient magnitude based equation implemented in itkGradientNDAnisotropicDiffusionFunction.
  </description>
  <templated>
    <base>itk::Object</base>
    <template>InputImageType</template>
    <template>OutputImageType</template>
  </templated>

  <inputs>
    <input num="1">
      <value>InputImageType</value>
      <call>SetInput</call>
      <name>InputImage</name>
    </input>  
  </inputs>
  <outputs>
    <output num="1">
      <value>OutputImageType</value>
      <call>GetOutput</call>
      <name>OutputImage</name>
    </output>
  </outputs>

  <parameters>
    <param>
      <name>time_step</name>
      <type>double</type>
      <call>SetTimeStep</call>
    </param>
    <param>
      <name>iterations</name>
      <type>int</type>
      <call>SetIterations</call>
    </param>
    <param>
      <name>conductance_parameter</name>
      <type>double</type>
      <call>SetConductanceParameter</call>
    </param>
  </parameters>

  <includes>
    <include>itkGradientAnisotropicDiffusionImageFilter.h</include>
  </includes>
</filter-itk>

