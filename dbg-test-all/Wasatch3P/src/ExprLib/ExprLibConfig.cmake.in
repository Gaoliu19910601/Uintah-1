# ExprLibConfig.cmake - defines variables to use the expression
#  library in another cmake project.  The following variables are
#  defined:
#
# ExprLib_FOUND - true (1)
# 
# ExprLib_INCLUDE_DIR - the include directory for the installed header files
#
# ExprLib_ENABLE_THREADS - boolean set to true if multicore support is enabled
# ExprLib_NTHREADS - number of threads that the expression library supports.
#
# typical usage:
#   find_package( ExprLib )
#   include_directories_( ${ExprLib_INCLUDE_DIR} )
#   target_link_libraries( ... exprlib )
#

set( ExprLib_INCLUDE_DIR @ExprLib_INCLUDE@ @TPL_INCLUDE_DIRS@ )
set( ExprLib_TPL_LIBS @TPL_LIBRARIES@ )

find_package( SpatialOps PATHS @SpatialOps_DIR@ )
include( @CMAKE_INSTALL_PREFIX@/lib/expression/ExprLib.cmake )

set( ExprLib_ENABLE_OUTPUT @ENABLE_OUTPUT@ )
set( ExprLib_ENABLE_THREADS @ENABLE_THREADS@ )
set( ExprLib_NTHREADS @NTHREADS@ )
set( ExprLib_ENABLE_LBMS @ENABLE_LBMS@ )
set( ExprLib_ENABLE_UINTAH @ENABLE_UINTAH@ )

set( ExprLib_COMPILER_DEFS @ExprCompilerDefs@ )

foreach( prop ${ExprLib_COMPILER_DEFS} )
  add_definitions( ${prop} )
endforeach()

if( "${ExprLib_ENABLE_OUTPUT}" )
  set( ExprLib_compare_database @CMAKE_INSTALL_PREFIX@/bin/compare_database )
endif()

set( ExprLib_create_expr @CMAKE_INSTALL_PREFIX@/bin/create_expr )
