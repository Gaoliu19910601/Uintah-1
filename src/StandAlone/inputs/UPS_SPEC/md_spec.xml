<?xml version='1.0' encoding='ISO-8859-1' ?>
<Uintah_Include>   

  <MD                           spec="OPTIONAL NO_DATA" >
    <coordinateFile             spec="REQUIRED STRING" />
    
    
    <MDSystem                   spec="OPTIONAL NO_DATA">
      <numAtoms                 spec="REQUIRED INTEGER"/>
      <pressure                 spec="REQUIRED VECTOR"/>
      <temperature              spec="REQUIRED DOUBLE"/>
      <orthorhombic             spec="REQUIRED BOOLEAN"/>
      <boxSize                  spec="REQUIRED VECTOR" />
      <ghostcells               spec="REQUIRED INTEGER"/>
      <cutoffRadius             spec="OPTIONAL DOUBLE 'positive'"/>
    </MDSystem>
    
    <Nonbonded                  spec="REQUIRED NO_DATA"
                                  attribute1="type REQUIRED STRING 'none LJ12_6'">
      <r12                      spec="REQUIRED DOUBLE" />
      <r6                       spec="REQUIRED DOUBLE" />
      <cutoffRadius             spec="OPTIONAL DOUBLE 'positive'" />
    </Nonbonded>
    
    
    <Electrostatics             spec="REQUIRED NO_DATA"
                                  attribute1="type REQUIRED STRING 'none SPME'">
      <ewaldBeta                spec="REQUIRED DOUBLE 'positive'"/>
      <polarizable              spec="REQUIRED BOOLEAN"/>
      <polarizationTolerance    spec="REQUIRED DOUBLE 'positive'"/>
      <kLimits                  spec="OPTIONAL VECTOR 'positive'"/>
      <splineOrder              spec="REQUIRED INTEGER"/>
      <maxiterations            spec="OPTIONAL INTEGER 'positive'"/>
      <cutoffRadius             spec="OPTIONAL DOUBLE 'positive'"/>
    </Electrostatics>
    
  </MD>

</Uintah_Include>
