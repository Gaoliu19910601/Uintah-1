<?xml version='1.0' encoding='ISO-8859-1' ?>
<Uintah_Include>   

  <MD                           spec="OPTIONAL NO_DATA" >
    <Forcefield                   spec="REQUIRED NO_DATA"
                                  attribute1 = "type REQUIRED STRING 'Lucretius'">
          <!-- Lucretius has a coordinate input file, a forcefield input file, and a molecular connectivity/ff mapping file -->
          <coordinate_file          spec="REQUIRED STRING"       need_applies_to="type Lucretius" />
          <forcefield_file          spec="REQUIRED STRING"       need_applies_to="type Lucretius" />
          <connectivity_file        spec="OPTIONAL STRING"       need_applies_to="type Lucretius" />
    </Forcefield>    

    <System                     spec="REQUIRED NO_DATA"
                                  attribute1 = "ensemble REQUIRED STRING 'NVE NVT NPT Isokinetic'">    
      <pressure                     spec="REQUIRED VECTOR"       need_applies_to="ensemble NPT" />
      <temperature                  spec="REQUIRED DOUBLE"       need_applies_to="ensemble NPT NVT Isokinetic" />

      <unit_cell                spec="OPTIONAL NO_DATA"
                                  attribute1 = "format REQUIRED STRING 'Isotropic Length-Angle Basis_Vectors'" />
                                  
                                <!-- Isotropic requires only a single box length -->
          <box                      spec="REQUIRED DOUBLE 'positive'"       need_applies_to="format Isotropic" />
          
                                <!-- Enter unit cell as (a,b,c) basis vector lengths and alpha,beta,gamma angles -->
          <a_b_c                    spec="REQUIRED VECTOR"                  need_applies_to="format Length-Angle" />
          <alpha_beta_gamma         spec="REQUIRED VECTOR"                  need_applies_to="format Length-Angle" />

                                <!-- Explicitly enter individual basis vectors -->
          <basis_vectors            spec="REQUIRED MULTIPLE_VECTORS" need_applies_to "format Basis_Vectors" /> 

      <!-- Cutoff radius is the only strictly required component of the system definition -->
      <cutoffRadius             spec="REQUIRED DOUBLE 'positive'"/>
    </System>
    
    <Integrator                 spec="REQUIRED NO_DATA"
                                attribute1 = "type REQUIRED STRING 'velocity'">
       <timestep                spec="REQUIRED DOUBLE 'positive'"/>
       <number_of_steps         spec="REQUIRED INTEGER 'positive'"/>
                                <!-- Eventually the rRESPA control strings with multi-timestep will go here -->
    </Integrator>

    <Electrostatics             spec="REQUIRED NO_DATA"
                                  attribute1="type REQUIRED STRING 'none SPME'">
                                <!-- SPME requires a scaling parameter, fourier space grid density, and spline order. 
                                     Optionally, a seperate realspace/fourier space cutoff radius can be specified specifically
                                     for the electrostatic calculation.  If not, it is inherited from the global calculation. -->
      <ewaldBeta                spec="REQUIRED DOUBLE  'positive'"          need_applies_to="type SPME" />
      <kGrids                   spec="REQUIRED VECTOR  'positive'"          need_applies_to="type SPME" />
      <splineOrder              spec="REQUIRED INTEGER 'positive'"          need_applies_to="type SPME" />
      <cutoffRadius             spec="OPTIONAL DOUBLE  'positive'"/>

                                <!-- Additionally we may choose to run with polarizability.
                                     If enabled, we require a tolerance to indicate dipole convergence and a maximum
                                     number of iterations to ensure convergence does not hang the simulation. -->
        <polarizable              spec="REQUIRED NO_DATA" need_applies_to "type SPME"
                                attribute1 = "enabled REQUIRED STRING 'true false'" >
        <polarizationTolerance    spec="REQUIRED DOUBLE 'positive'" need_applies_to= "enabled true"/>
        <maxiterations            spec="REQUIRED INTEGER 'positive'" need_applies_to "enabled true"/>
    </Electrostatics>

          
