
#include <config/sci.cf>

LOCALINCLUDES = -I. -I../modules -I../../wrapper -I../../wrapper/Mt -I../../wrapper/libMInT
OBJS = CallbackCloners.o \
	Color.o ColorManager.o  Connection.o  \
	ContourSet.o  ContourSetPort.o  DBContext.o  Datatype.o  Dialbox.o  \
	Geom.o  GeometryPort.o  Grid.o\
	HelpUI.o  MatrixPort.o  MemStats.o  Mesh.o  MeshPort.o  \
	MessageBase.o  MenuBar.o  ModuleHelper.o  \
	Module.o  ModuleList.o  MotifCallbackBase.o  \
	MUI.o  \
	MtXEventLoop.o \
	Network.o  NetworkEditor.o  PopupMenu.o  Port.o  \
	ScalarField.o  ScalarFieldRG.o  ScalarFieldUG.o  \
	ScalarFieldPort.o  \
	SoundPort.o  Surface.o  SurfacePort.o \
	ThreadStats.o  UserModule.o  \
	VectorField.o  VectorFieldPort.o  VectorFieldRG.o \
	VectorFieldUG.o \
	XFont.o  XQColor.o \
	main.o  tmpl_hack.o
SRCS = CallbackCloners.cc \
	Color.cc ColorManager.cc Connection.cc \
	ContourSet.cc ContourSetPort.cc DBContext.cc Datatype.cc Dialbox.cc \
	Geom.cc GeometryPort.cc Grid.cc\
	HelpUI.cc MatrixPort.cc MemStats.cc Mesh.cc MeshPort.cc \
	MessageBase.cc MenuBar.cc ModuleHelper.cc \
	Module.cc ModuleList.cc MotifCallbackBase.cc \
	MUI.cc \
	MtXEventLoop.cc \
	Network.cc NetworkEditor.cc PopupMenu.cc Port.cc \
	ScalarField.cc ScalarFieldRG.cc ScalarFieldPort.cc \
	ScalarFieldUG.cc\
	SoundPort.cc Surface.cc SurfacePort.cc \
	ThreadStats.cc UserModule.cc \
	VectorField.cc VectorFieldPort.cc VectorFieldRG.cc \
	VectorFieldUG.cc \
	XFont.cc XQColor.cc \
	main.cc tmpl_hack.cc 
TARGET = project

SCI_LIBS = \
	../modules/modules.o \
	SCI_MultitaskLib \
	SCI_ClassLib \
	SCI_GeometryLib \
	SCI_MathLib \
	../../templates/fast_templates.o \
	../../wrapper/libMInT/libMInT.a \
	SCI_MallocLib

../../templates/fast_templates.o: $(OBJS) ../modules/modules.o
	make_templates ../../templates

SCI_LDFLAGS = -laudio -laudiofile SCI_LM SCI_LTHREAD SCI_LMOTIF \
	SCI_LX11 -lXi -lgen -lGLw -lGLU -lGL -ptv

depend:: XQColorDB.h

SCIDependTarget($(SRCS))
SCIProgramTarget($(TARGET), $(OBJS), $(SCI_LIBS), $(SCI_LDFLAGS))

XQColorDB.h: rgb.txt gendb.awk
	rm -f XQColorDB.h
	awk -f gendb.awk rgb.txt > XQColorDB.h
