QTOPDIR = ..
CC= gcc
CFLAGS= -g -DHPUX -DMMAP -DCHECKASSERT -D_BSD_SIGNALS -DBSD_SIGNALS $(INCLUDES) 
INCLUDES= -I. -I../include -Icthreads/include 
CRT= /lib/crt0.o
LIBS= $(QTOPDIR)/lib/libquarks.a $(QTOPDIR)/lib/libcthreads.a -lBSD -lgcc -lc -lm
SLIBS= $(LIB_OBJS) $(QTOPDIR)/lib/libcthreads.a -lBSD -lgcc -lc -lm
TLIBS= $(LIB_OBJS) $(QTOPDIR)/lib/libcthreads.a -lBSD -lgcc -lc -lm

LDFLAGS= -static -nostdlib

LIB_SRCS= list.c      \
      table.c         \
      message.c       \
      connection.c    \
      buffer.c        \
      port.c          \
      thread.c        \
      util.c

DLIB_SRCS=  dsm_thread.c  \
      ptable.c            \
      region.c            \
      mem.c               \
      protocol.c          \
      hppa_instruction.c  \
      diff.c              \
      synch.c             \
      interface.c

# for server:
SERV_SRCS= server.c

LIB_OBJS= ${LIB_SRCS:.c=.o}
DLIB_OBJS= ${DLIB_SRCS:.c=.o}
SERV_OBJS= ${SERV_SRCS:.c=.o}

TESTS: qtest
APPS:  matmult sor monitor

all:  sh_server qtest matmult sor monitor

libquarks.a: $(LIB_OBJS) $(DLIB_OBJS) libcthreads.a
	rm -f $@
	ar crv $@ $(LIB_OBJS) $(DLIB_OBJS)
	mv libquarks.a $(QTOPDIR)/lib

libcthreads.a: 
	(cd cthreads/src; make -f Makefile.hpux install)
	
sh_server: $(SERV_OBJS) $(LIB_OBJS) libcthreads.a
	$(CC) $(LDFLAGS) -o ../bin/$@ $(SERV_OBJS) $(CRT) $(SLIBS)

th_input.o: th_input.c 
	$(CC) -g -c -DHPUX $(INCLUDES) th_input.c 

th_input: th_input.o 
	$(CC) $(LDFLAGS) -o $@ th_input.o $(CRT) $(TLIBS)


qtest.o: qtest.c 
	$(CC) -g -c -DHPUX $(INCLUDES) qtest.c

qtest: qtest.o libquarks.a
	$(CC) $(LDFLAGS) -o $@ qtest.o $(CRT) $(LIBS) 

matmult.o: matmult.c 
	$(CC) -g -c -DHPUX $(INCLUDES) matmult.c

matmult: matmult.o libquarks.a
	$(CC) $(LDFLAGS) -o $@ matmult.o $(CRT) $(LIBS) 

sor.o: sor.c 
	$(CC) -g -c -DHPUX $(INCLUDES) sor.c

sor: sor.o libquarks.a
	$(CC) $(LDFLAGS) -o $@ sor.o $(CRT) $(LIBS) 

depend:	
	makedepend ${INCLUDES} ${LIB_SRCS} $(DLIB_SRCS) $(SERV_SRCS)

clean:
	rm -f core a.out *.a *.o msgtest ../lib/*.a ../bin/sh_server
	rm -f $(TESTS) $(APPS)
	(cd cthreads/src; make -f Makefile.hpux clean)



